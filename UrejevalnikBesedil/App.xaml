<Application x:Class="UrejevalnikBesedil.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UrejevalnikBesedil"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <Style TargetType="Button" x:Key="ButtonsStyle">
            <Setter Property="BorderBrush" Value="Silver"></Setter>
        </Style>

        <Style TargetType="ListView" x:Key="ListStyle">
            <Setter Property="BorderBrush" Value="Silver"></Setter>
            <Setter Property="AllowDrop" Value="True"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="Width" Value="150"></Setter>
            <Setter Property="Height" Value="25"></Setter>
            <Setter Property="Margin" Value="4"></Setter>
        </Style>



        <Style TargetType="RichTextBox" x:Key="RichTextBoxStyle">
            <Setter Property="Background" Value="WhiteSmoke"></Setter>
            <Setter Property="Margin" Value="4"></Setter>
            <Setter Property="Focusable" Value="True"></Setter>
        </Style>

        <Style TargetType="StatusBar" x:Key="StatusBarStyles">
            <Setter Property="Background" Value="DarkOrange"></Setter>
        </Style>

       
         
    </Application.Resources>
</Application>
