<Window x:Class="UrejevalnikBesedil.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UrejevalnikBesedil"
        mc:Ignorable="d"
        Title="SearchWindow" Height="250" Width="600">
    <Grid>
       <StackPanel>
           <Label Content="Finder:" Margin="8"></Label>
           <TextBox Margin="8" Name="FindTextBox" ></TextBox>
           <Button Margin="8" Content="Confirm" Name="FindTextButton" Click="FindTextButton_OnClick"></Button>
       </StackPanel> 
    </Grid>
</Window>
